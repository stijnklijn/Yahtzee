<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
      prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="nl.stijnklijn.yahtzee.GameController">
    <HBox prefHeight="100.0" prefWidth="200.0">
        <HBox fx:id="player1Pane" prefHeight="100.0" prefWidth="200.0"/>
        <HBox fx:id="player2Pane" prefHeight="100.0" prefWidth="200.0"/>
    </HBox>
    <GridPane fx:id="fieldPane" vgap="10">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </VBox.margin>
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Ones" GridPane.rowIndex="1"/>
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Twos" GridPane.rowIndex="2"/>
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Threes" GridPane.rowIndex="3"/>
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Fours" GridPane.rowIndex="4"/>
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Fives" GridPane.rowIndex="5"/>
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Sixes" GridPane.rowIndex="6"/>
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Bonus" GridPane.rowIndex="7"/>
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Three of a kind" GridPane.columnIndex="3"
              GridPane.rowIndex="1"/>
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Four of a kind" GridPane.columnIndex="3"
              GridPane.rowIndex="2"/>
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Full house" GridPane.columnIndex="3"
              GridPane.rowIndex="3"/>
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Small straight" GridPane.columnIndex="3"
              GridPane.rowIndex="4"/>
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Large straight" GridPane.columnIndex="3"
              GridPane.rowIndex="5"/>
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Yahtzee" GridPane.columnIndex="3" GridPane.rowIndex="6"/>
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Chance" GridPane.columnIndex="3" GridPane.rowIndex="7"/>
    </GridPane>
    <HBox fx:id="dicePane" alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20"/>
    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="600.0" spacing="20">
        <Button fx:id="btRoll" mnemonicParsing="false" onAction="#roll" text="ROLL "/>
        <Button fx:id="btPlay" mnemonicParsing="false" onAction="#play" text="PLAY"/>
    </HBox>
</VBox>
